# Copy to deploy-to-ha.env and fill in your values.
# deploy-to-ha.env is gitignored.

# Home Assistant URL (how your dev machine reaches HA)
HA_URL="http://192.168.1.100:8123"

# Long-lived access token from HA: Profile → Security → Long-Lived Access Tokens
HA_TOKEN=""

# SSH target for file sync and log access.
# Use HA hostname/IP. For Terminal & SSH add-on use port 22.
# For debug SSH use port 22222.
SSH_HOST=""
SSH_USER="root"
SSH_PORT="22"

# Path to config on the remote. Usually /config for Terminal add-on.
# For debug SSH on HA OS: /mnt/data/supervisor/homeassistant
REMOTE_CONFIG="/config"

# Seconds to wait for HA to come back after restart
RESTART_WAIT="90"

# How many log lines to scan for EmptyEpsilon
LOG_LINES="200"
